{
  "manifest_version": 3,
  "name": "pixiv-download-helper",
  "version": "1.0",
  "description": "A helper extension to download images from Pixiv.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "160": "icons/icon160.png"
  },
  "host_permissions": [
    "https://www.pixiv.net/artworks/*",
    "http://127.0.0.1:8001/download-image/"
  ]
}
